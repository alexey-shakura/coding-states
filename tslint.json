{
  "extends": ["tslint:latest", "codelyzer"],
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "callable-types": true,
    "deprecation": {
      "severity": "warn"
    },
    "member-access": [true, "check-accessor", "check-constructor"],
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "constructor", "instance-method"]
      }
    ],
    "no-empty-interface": true,
    "no-internal-module": true,
    "no-var-requires": true,
    "class-name": true,
    "no-console": [true, "log", "debug", "info", "time", "timeEnd", "trace"],
    "no-debugger": true,
    "no-arg": true,
    "no-invalid-this": true,
    "no-shadowed-variable": true,
    "no-var-keyword": true,
    "use-isnan": true,
    "cyclomatic-complexity": [true, 30],
    "max-file-line-count": [true, 500],
    "no-default-export": true,
    "prefer-const": true,
    "array-type": false,
    "no-conditional-assignment": true,
    "curly": true,
    "arrow-return-shorthand": true,
    "interface-name": [true, "always-prefix"],
    "no-angle-bracket-type-assertion": true,
    "object-literal-shorthand": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "comment-format": [true, "check-space"],
    "no-eval": true,
    "no-unsafe-finally": true,
    "triple-equals": true,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "no-bitwise": false,
    "no-construct": true,
    "no-duplicate-super": true,
    "no-empty": [true, "allow-empty-functions"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "no-redundant-jsdoc": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "radix": true,
    "no-unnecessary-initializer": true,
    "no-submodule-imports": false,
    "object-literal-sort-keys": false,
    "jsdoc-format": false,
    "no-implicit-dependencies": false,
    "prefer-conditional-expression": false,
    "no-namespace": true,
    "interface-over-type-literal": false,
    "no-magic-numbers": true,
    "no-reference": true,
    "no-duplicate-variable": true,
    "no-duplicate-switch-case": true,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "property-declaration",
      "member-variable-declaration"
    ],
    "quotemark": [true, "single", "avoid-escape"],
    "arrow-parens": false
  }
}
